{
  "name": "my-app",
  "type": "module",
  "scripts": {
    "update": "FUNCTION_NAME=helloHono; aws lambda update-function-code --zip-file fileb://lambda.zip --function-name $FUNCTION_NAME",
    "dev": "tsx watch src/nodejs.ts",
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/aws.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "aws": "run-s build zip update"
  },
  "devDependencies": {
    "@hono/node-server": "^1.12.1",
    "esbuild": "^0.21.4",
    "npm-run-all2": "^6.2.0",
    "tsx": "^4.18.0"
  },
  "dependencies": {
    "hono": "^4.5.8"
  }
}
